{
  "name": "Reveal Deleted FB Messages",
  "description": "Xem lại tin nhắn đã gỡ trên fb",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Reveal Deleted FB Message",
    "default_popup": "popup/popup.html"
  },
  "externally_connectable": {
    "matches": [
      "*://*.facebook.com/*",
      "*://*.messenger.com/*",
      "*://*.instagram.com/*"
    ]
  },
  "permissions": [
    "storage",
    "background",
    "*://*.facebook.com/*",
    "*://*.messenger.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["./inject.js"],
      "matches": [
        "*://*.facebook.com/*",
        "*://*.messenger.com/t/*",
        "*://*.instagram.com/*"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["inject_websocket.js"]
}
